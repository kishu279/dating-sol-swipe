{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun install && bunx prisma generate --schema=packages/database/prisma/schema.prisma && bun run build"
  },
  "deploy": {
    "preDeployCommand": "bunx prisma migrate deploy --schema=packages/database/prisma/schema.prisma",
    "startCommand": "bun run start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}
